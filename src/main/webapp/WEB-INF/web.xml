<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>shengdai application framework v0.5</display-name>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/spring/spring.xml</param-value>
  </context-param>
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>hibernateFilter</filter-name>
    <filter-class>org.springframework.orm.hibernate3.support.OpenSessionInViewFilter</filter-class>
    <init-param>
      <param-name>singleSession</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>hibernateFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>hibernateFilter</filter-name>
    <url-pattern>*.do1</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>hibernateFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter>
    <display-name>logonFilter</display-name>
    <filter-name>logonFilter</filter-name>
    <filter-class>com.shengdai.kpi.system.SystemFilter</filter-class>
    <init-param>
      <param-name>excludeUrls</param-name>
      <param-value>/detect;/detect/*;*.js;*.jpg;*.htm;*.html;*.gif;*.png;*.css;*.swf;/login.jsp;/login.do1;/logout.do1;/loginAccredit.do1;/500.jsp;/404.jsp;*.xls;/appinter/*.do;/verificate/*.do;/version/versionjsonp/getLatestVersion.do;/version/apkversion/apkversionsave/downloadFile.do;
      </param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>logonFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>logonFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>logonFilter</filter-name>
    <url-pattern>*.do1</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>mobileApiFilter</filter-name>
    <filter-class>com.shengdai.mobile.openapi.security.OpenApiFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>mobileApiFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>struts2Controller</filter-name>
    <filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>../struts/struts.xml</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>struts2Controller</filter-name>
    <url-pattern>*</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.shengdai.ssl.SSLCasSessionListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.shengdai.kpi.system.CommonLoaderListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.badou.project.common.ServletStartupLoaderListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>proxoolAdmin</servlet-name>
    <servlet-class>org.logicalcobwebs.proxool.admin.servlet.AdminServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>proxoolAdmin</servlet-name>
    <url-pattern>/proxool/admin</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>sttuts1Action</servlet-name>
    <servlet-class>
			org.apache.struts.action.ActionServlet
		</servlet-class>
    <init-param>
      <param-name>config</param-name>
      <param-value>
				/WEB-INF/struts/struts1/struts-config.xml,
				/WEB-INF/struts/struts1/struts-config-system.xml,
				/WEB-INF/struts/struts1/struts-config-flow.xml,
				/WEB-INF/struts/struts1/struts-config-common.xml,
			</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>sttuts1Action</servlet-name>
    <url-pattern>*.do1</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>404</error-code>
    <location>/pub/404.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/pub/500.jsp</location>
  </error-page>
</web-app>